{
  "name": "family-ai-assistant",
  "version": "1.0.0",
  "description": "Family AI Assistant with Model Management",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cross-env NODE_ENV=development electron .\" \"vite\"",
    "build": "vite build",
    "build:electron": "electron-builder build --win --publish never",
    "build:win": "npm run build && npm run build:electron",
    "test": "playwright test",
    "test:unit": "jest --testMatch='**/__tests__/**/*.test.ts'",
    "test:integration": "jest --testMatch='**/__tests__/**/*.integration.test.ts'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "jest --coverage",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "start:server": "node main/server.js"
  },
  "keywords": [
    "openai",
    "electron",
    "react",
    "typescript",
    "firebase"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "babel-jest": "^30.0.0-beta.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-playwright-helpers": "^1.7.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.5.0",
    "dotenv": "^16.5.0",
    "electron-store": "^8.1.0",
    "exceljs": "^4.3.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase": "^11.6.1",
    "google-search-results-nodejs": "^2.1.0",
    "mammoth": "^1.6.0",
    "node-fetch": "^2.7.0",
    "openai": "^4.0.0",
    "pdf-parse": "^1.1.1",
    "typo-js": "^1.0.3",
    "uuid": "^9.0.0",
    "vite": "^6.3.3"
  }
}
