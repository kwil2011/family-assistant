    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.12.0",
    "electron-playwright-helpers": "^1.7.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "electron-store": "^8.1.0",
    "exceljs": "^4.4.0",
    "firebase": "^11.6.1",
    "google-search-results-nodejs": "^2.1.0",
    "mammoth": "^1.9.0",
    "openai": "^4.28.0",
